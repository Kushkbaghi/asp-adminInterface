@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 id="title-center">@ViewData["Title"]</h1>
<h2 id="title-center">Skriv in din e-postadress.</h2>
<hr />
<div id="identity-form" class="row">

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email" class="form-label">E-post</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Återställa lösenord</button>
    </form>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
